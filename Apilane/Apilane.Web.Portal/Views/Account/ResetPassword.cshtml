@using Apilane.Web.Portal.Models;
@model Apilane.Web.Portal.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Account", null, FormMethod.Post, true, new { @class = "form-horizontal", role = "form" }))
{    
    @Html.HiddenFor(model => model.Code)

    <h2 class="text-center mb-4 text-light">Apilane</h2>

    <div class="form-group mb-3">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autofocus = "autofocus", maxlength = 50, placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", maxlength = 50, placeholder = "New password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", maxlength = 50, placeholder = "Confirm new password" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.ValidationMessage("CustomError", new { @class = "text-danger" })
    </div>

    <div class="d-grid">
        <button class="btn btn-primary" type="submit">Reset</button>
    </div>
}

