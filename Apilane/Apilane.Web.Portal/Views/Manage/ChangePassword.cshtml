@model Apilane.Web.Portal.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Manage", null, FormMethod.Post, true, new { @class = "form-horizontal", role = "form" }))
{
    <h2 class="text-center mb-4 text-light">Apilane</h2>

    <div class="form-group mb-3">
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", maxlength = 50, placeholder = "Current password" })
        @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", maxlength = 50, placeholder = "New password" })
        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", maxlength = 50, placeholder = "New password confirm" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.ValidationMessage("CustomError", new { @class = "text-danger" })
    </div>

    <div class="d-grid">
        <button class="btn btn-primary" type="submit">Change my password</button>
        <a href="@Url.Action("Index", "Applications")" class="btn btn-secondary">Cancel</a>
    </div>
}

