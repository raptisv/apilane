@using Apilane.Common.Models;
@model DBWS_Application
@{
    var isDarkTheme = Html.IsDarkTheme(Context.Request);
}

<div>
    <a href="@Url.RouteUrl("AppRoute", new {controller = "Application", action = "DataBrowser", appid = Model.Token })" class="btn btn-default mt-1">
        <i class="bi bi-database me-1"></i>Data
    </a>
    <a href="@Url.RouteUrl("AppRoute", new {controller = "Application", action = "Security", appid = Model.Token })" class="btn btn-default mt-1">
        <i class="bi bi-lock me-1"></i>Security
    </a>
    <a href="@Url.RouteUrl("AppRoute", new {controller = "CustomEndpoints", action = "Index", appid = Model.Token })" class="btn btn-default mt-1">
        <i class="bi bi-arrow-up-right-square me-1"></i>Custom
    </a>
    <a href="@Url.RouteUrl("AppRoute", new {controller = "Application", action = "Email", appid = Model.Token })" class="btn btn-default mt-1">
        <i class="bi bi-envelope me-1"></i>Email
    </a>
    <a href="@Url.RouteUrl("AppRoute", new {controller = "Reports", action = "Index", appid = Model.Token })" class="btn btn-default mt-1">
        <i class="bi bi-graph-up me-1"></i>Reports
    </a>
    @if (Model.UserID == User.Identity!.GetUserId())
    {
        <a href="@Url.RouteUrl("AppRoute", new { appid = Model.Token, controller = "Collaborate", action = "Index" })" class="btn btn-default mt-1">
            <i class="bi bi-people me-1"></i>Share
        </a>
    }
    <a href="#" class="swal-display-token-@Model.ID btn btn-default mt-1">
        <i class="bi bi-info-circle me-1"></i>Info
    </a>
    <a href="@(Model.Server.ServerUrl.ToLower().Trim('/'))/swagger/index.html" class="btn btn-default mt-1" target="_blank">
        <i class="bi bi-box-arrow-up-right me-1"></i>API
    </a>
</div>
<hr class="my-4"/>