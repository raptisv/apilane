@using Apilane.Portal.Models;
@using Apilane.Common;
@model Apilane.Portal.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new { @class = "form-horizontal", role = "form" }))
{
    <h2 class="text-center mb-4 text-light">Apilane</h2>

    <div class="form-group mb-3">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", maxlength = 50, placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", maxlength = 50, placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", maxlength = 50, placeholder = "Confirm password" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>
    <div>
        @Html.ValidationMessage("CustomError", new { @class = "text-danger" })
    </div>

    <div class="d-grid">
        <button class="btn btn-primary btn-block" type="submit">Sign up</button>
    </div>

    <br>
    <span>Already have an account? </span>
    <a href="@Url.Action("Login", "Account")" class="signup">Sign in</a>
}